{
  "manifest_version": 3,
  "name": "Dark Mode Toggle",
  "version": "1.0",
  "description": "Toggle dark mode on/off for any site.",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  
  "permissions": ["scripting", "activeTab"],
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}